<h2>View All Product</h2>
<table class="table table-hover table-borderd table-striped">
	<tr>
		<th>S.No.</th>
		<th>Name</th>
		<th>Price</th>
		<th>Category</th>
		<th>Edit</th>
		<th>Delete</th>
	</tr>
	<% result.forEach(function(item, i){ %>
		<tr>
			<td><%= i+1 %></td>
			<td><%= item.name %></td>
			<td><%= item.price %></td>
			<td><%= item.category %></td>
			<td><a href="#" class="btn btn-info">Edit</a></td>
			<td><a href="#" class="btn btn-danger">Delete</a></td>
		</tr>
	<% }) %>

</table>