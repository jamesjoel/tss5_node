<script type="text/javascript">
  $(document).ready(function(){
    $("#submit").click(function(){
      var u = $("#username").val();
      var p = $("#password").val();
      $.ajax({
          url : "/admin/login",
          data : { username : u, password : p},
          type : "post",
          success : function(res){
            // alert(res);
            switch(res){
              case "1" : $("#msg").html("Invalid Username and Password");
                break;
              case "2" : $("#msg").html("Invalid Password");
                break;
              case "3" : window.location.href="/admin/dashboard/";
                break;
            }
          }
      });
    });
  });
</script>
